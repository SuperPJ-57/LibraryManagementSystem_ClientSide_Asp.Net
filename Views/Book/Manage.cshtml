@{
    ViewData["Title"] = "Manage Books";
}
@model BookViewModel
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <img src="/resources/Vector.png" alt="Books Icon" style="width: 32px; height: 32px; margin-right: 12px;">
            <h1 class="h3 mb-0">Book Lists</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Book ID</th>
                            <th>Title</th>
                            <th>Author ID</th>
                            <th>Genre</th>
                            <th>ISBN</th>
                            <th>Quantity</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.Books)
                        {
                            <tr>
                                <td>@book.BookId</td>
                                <td>@book.Title</td>
                                <td>@book.AuthorId</td>
                                <td>@book.Genre</td>
                                <td>@book.ISBN</td>
                                <td>@book.Quantity</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <form asp-action="BookForm" asp-controller="Book" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@book.BookId" />
                                            <button class="btn btn-warning btn-sm">
                                                <img src="/resources/edit.png" alt="Edit Icon" style="width: 16px; height: 16px;">
                                            </button>
                                        </form>
                                        <form asp-action="Delete" asp-controller="Book" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@book.BookId" />
                                            <button class="btn btn-danger btn-sm">
                                                <img src="/resources/delete.png" alt="Delete Icon" style="width: 16px; height: 16px;">
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav class="mt-4">
                <ul class="pagination justify-content-end">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<style>
    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: white;
            color: #ffc107;
            border-color: #ffc107;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: white;
            color: #dc3545;
            border-color: #dc3545;
        }

    .page-link {
        color: #255D81;
    }

    .page-item.active .page-link {
        background-color: #255D81;
        border-color: #255D81;
    }
</style>


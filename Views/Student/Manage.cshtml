@{
    ViewData["Title"] = "Manage Students";
}
@model StudentViewModel
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            
           <i class="bi bi-mortarboard" style="font-size:2.5rem;"></i>
            <h1 class="h3 mb-0 ms-2">Student Lists</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Faculty</th>
                            <th>Email</th>
                            <th>Contact No.</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students)
                        {
                            <tr>
                                <td>@student.StudentId</td>
                                <td>@student.Name</td>
                                <td>@student.Department</td>
                                <td>@student.Email</td>
                                <td>@student.ContactNumber</td>
                                

                                <td>
                                    <div class="d-flex gap-2">
                                        <form asp-action="StudentForm" asp-controller="Student" method="Post" style="display:inline;">
                                            <input type="hidden" name="id" value="@student.StudentId" />
                                            <button class="btn btn-warning btn-sm">
                                                <img src="/resources/edit.png" alt="Edit Icon" style="width: 16px; height: 16px;">
                                            </button>
                                        </form>
                                        <form asp-action="Delete" asp-controller="Student" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@student.StudentId" />
                                            <button class="btn btn-danger btn-sm">
                                                <img src="/resources/delete.png" alt="Delete Icon" style="width: 16px; height: 16px;">
                                            </button>
                                        </form>
                                        
                                    </div>
                                </td>

                                    
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav class="mt-4">
                <ul class="pagination justify-content-end">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<style>
    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: white;
            color: #ffc107;
            border-color: #ffc107;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: white;
            color: #dc3545;
            border-color: #dc3545;
        }

    .page-link {
        color: #255D81;
    }

    .page-item.active .page-link {
        background-color: #255D81;
        border-color: #255D81;
    }
</style>


@{
    ViewData["Title"] = "Manage Authors";
}
@model AuthorViewModel
<link href="/css/site.css" rel="stylesheet" />
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <img src="/resources/user.png" alt="Authors Icon" style="width: 32px; height: 32px; margin-right: 12px;">
            <h1 class="h3 mb-0">Author Details</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="authortable">
                    <thead class="table-light">
                        <tr>
                            <th>Author ID</th>
                            <th>Name</th>
                            <th>Bio</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var author in Model.Authors)
                        {
                            <tr>
                                <td>@author.AuthorId</td>
                                <td>@author.Name</td>
                                <td>@author.Bio</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <form asp-action="AuthorForm" asp-controller="Author" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@author.AuthorId" />
                                            <button class="btn btn-warning btn-sm">
                                                <img src="/resources/edit.png" alt="Edit Icon" style="width: 16px; height: 16px;">
                                            </button>
                                        </form>
                                        <form asp-action="Delete" asp-controller="Author" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@author.AuthorId" />
                                            <button class="btn btn-danger btn-sm">
                                                <img src="/resources/delete.png" alt="Delete Icon" style="width: 16px; height: 16px;">
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section scripts {
   

    <script>
        $(document).ready(function () {
            $('#authortable').DataTable({
                paging: true,        // Enable pagination
                searching: true,     // Enable search functionality
                ordering: true,      // Enable column sorting
                lengthMenu: [5, 10, 25, 50], // Rows per page options
                pageLength: 10,       // Default rows per page
                language: {
                    search: "",
                    searchPlaceholder: "Search authors...",
                    paginate: {
                        previous: "Previous",
                        next: "Next"
                    }
                },
                // Align DataTables with Bootstrap layout
                dom: '<"row"<"col-md-6"l><"col-md-6"f>>' +
                    '<"row"<"col-12"tr>>' +
                    '<"row"<"col-md-5"i><"col-md-7"p>>'
            });

            
                // Initialize DataTable
                var table = $('#author_table').DataTable({
                    "initComplete": function () {
                        $('#authortable_wrapper .row').first().addClass('align-items-center'); // Align elements vertically

                        // Move search bar and table length to appropriate positions
                        $('#authortable_filter').addClass('col-md-4').appendTo('#authortable_wrapper .row:first');
                        $('#authortable_length').addClass('col-md-3').insertAfter('#authortable_filter');

                        // Add "Add Author" button dynamically
                        $('#authortable_wrapper .row:first').append(`
                            <div class="col-md-5 text-end">
                                <button type="button" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add Author
                                </button>
                            </div>
                        `);
                    }
                });
           

        });
    </script>
}


